<div class="page-header">
  <h1>
    Picture tags
    <a href="/picture_tags/new" class="btn btn-lg btn-success">New Picture tag</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Actor</th>
        <th>Picture</th>
        <th>Actions</th>
      </tr>

      <% @picture_tags.each do |picture_tag| %>
      <tr>
        <td><%= picture_tag.actor_id %></td>
        <td><%= picture_tag.picture_id %></td>
        <td>
          <a href="/picture_tags/<%= picture_tag.id %>" class="btn btn-primary">Show</a>
          <a href="/picture_tags/<%= picture_tag.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_picture_tag/<%= picture_tag.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
