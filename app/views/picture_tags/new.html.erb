<!-- Validation failure messages -->
<% if @picture_tag.errors.any? %>
  <% @picture_tag.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Picture Tag</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_picture_tag" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for actor_id -->
      <div class="form-group">
        <label for="actor_id" class="control-label">
          Actor
        </label>

        <%= select_tag(:actor_id, options_from_collection_for_select(Actor.all, :id, :created_at, @picture_tag.actor_id), :class => "form-control") %>
      </div>

      <!-- Label and input for picture_id -->
      <div class="form-group">
        <label for="picture_id" class="control-label">
          Picture
        </label>

        <%= select_tag(:picture_id, options_from_collection_for_select(Picture.all, :id, :created_at, @picture_tag.picture_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Picture Tag
      </button>
      or
      <a href="/picture_tags">Cancel</a>
    </form>
  </div>
</div>
