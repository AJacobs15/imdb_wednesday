<div class="page-header">
  <h3>Picture Tag #<%= @picture_tag.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Actor</dt>
      <dd>
        <% if @picture_tag.actor.present? %>
          <a href="/actors/<%= @picture_tag.actor_id %>">
            <%= @picture_tag.actor.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Picture</dt>
      <dd>
        <% if @picture_tag.picture.present? %>
          <a href="/pictures/<%= @picture_tag.picture_id %>">
            <%= @picture_tag.picture.created_at %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/picture_tags" class="btn btn-primary">
        Back
      </a>
      <a href="/picture_tags/<%= @picture_tag.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_picture_tag/<%= @picture_tag.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
